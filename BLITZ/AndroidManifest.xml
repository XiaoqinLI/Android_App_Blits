<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cs329E.blitz"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="20" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name=".MainScreenActivity"
            android:label="@string/title_activity_blitz_selection" >
        </activity>
        <activity
            android:name=".SelectContactActivity"
            android:label="@string/title_activity_select_contact" >
        </activity>
        <activity
            android:name=".SelectLocationActivity"
            android:label="@string/title_activity_select_location" >
        </activity>
        <activity
            android:name=".FinalizeTimeActivity"
            android:label="@string/title_activity_finalize_time" >
        </activity>
        <activity
            android:name=".MyInvitationsActivity"
            android:label="@string/title_activity_my_invitations" >
        </activity>
        <activity
            android:name=".EventInvitationActivity"
            android:label="@string/title_activity_event_invitation" >
        </activity>
        
        
    </application>

</manifest>

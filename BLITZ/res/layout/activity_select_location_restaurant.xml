<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/select_location_activity_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="7"
    tools:context="com.cs329E.blitz.SelectLocationActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" >

        <org.lucasr.twowayview.TwoWayView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/lvItems"
            style="@style/TwoWayView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawSelectorOnTop="false"
            tools:context=".MainActivity" />

        <TextView
            android:id="@+id/where_to_blitz_rest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/blitz_where"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:weightSum="7" >
			
            <AutoCompleteTextView
		        android:id="@+id/autocomplete_items"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="6"
		        android:hint="@string/searching"
                android:inputType="textVisiblePassword" >
                <requestFocus />
            </AutoCompleteTextView>
            
            <!--  
            <EditText
                android:id="@+id/searchingLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:hint="@string/searching"
                android:inputType="textPassword" >

                <requestFocus />
            </EditText>
			-->
            <Button
                android:id="@+id/searchingButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/search_button"
                android:text="" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/select_location_placeholder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" >

        <TextView
            android:id="@+id/your_friend_like_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:text="@string/your_friend_like"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/friend_gallery_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5" >

        <HorizontalScrollView
            android:id="@+id/friendsfavouritescollview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/favourite1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sample_1" />

                <ImageView
                    android:id="@+id/favourite2"   
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sample_2" />

                <ImageView
                    android:id="@+id/favourite3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sample_3" />

                <ImageView
                    android:id="@+id/favourite4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sample_4" />

                <ImageView
                    android:id="@+id/favourite5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sample_5" />
            </LinearLayout>
        </HorizontalScrollView>

        <!--
        <ListView
	        android:id="@android:id/list"
	        android:layout_width="300dp"
	        android:layout_height="wrap_content" 
	        android:layout_centerHorizontal="true" >
		</ListView>
        -->
        <!--
        <HorizontalScrollView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	        <LinearLayout
	            android:id="@+id/mygallery"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            />
    	</HorizontalScrollView>
        -->
        <!--
	    <Gallery
		    android:id="@+id/gallery"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" />
        -->
    </RelativeLayout>

</LinearLayout>
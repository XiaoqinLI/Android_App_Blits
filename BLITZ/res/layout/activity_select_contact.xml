<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/select_contact_activity_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="7"
    tools:context="com.cs329E.blitz.SelectContactActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="2" >	
	    <TextView
	        android:id="@+id/who_to_blitz"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="15dp"
	        android:text="@string/blitz_who"
	        android:textSize="24sp"
	        android:textStyle="bold" />   
	</RelativeLayout>
	
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/select_contact_checkboxes"
	    android:layout_height="0dp"
	    android:layout_marginTop="10dp"
	    android:layout_weight="4" >
	    <!--  android:background="#FFFFFF"-->
	       
        <CheckBox
            android:id="@+id/adamcheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"       
	        android:layout_alignParentTop="true"
            android:button="@null"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:drawablePadding="150dp"
	        android:layout_centerHorizontal="true"
            android:text="adam"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/michaelcheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/adamcheckbox"
            android:layout_below="@+id/adamcheckbox"
            android:button="@null"
            android:drawablePadding="125dp"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
	        android:layout_centerHorizontal="true"
            android:text="michael"
            android:textSize="24sp" />
        
	</RelativeLayout>
	
    <RelativeLayout
        android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
        	android:background="@drawable/nextbutton"
            android:text="" />      
	</RelativeLayout>

</LinearLayout>

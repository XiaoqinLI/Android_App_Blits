<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/select_location_activity_bg"  
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="7"
    tools:context="com.cs329E.blitz.SelectLocationActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="2" >	
	    <TextView
	        android:id="@+id/where_to_blitz"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_centerHorizontal="true"
	        android:text="@string/blitz_where"
	        android:textSize="24sp"
	        android:textStyle="bold" />   
	</RelativeLayout>
	
    <RelativeLayout
        android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1.1" >	
	    <LinearLayout
	        android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:orientation="horizontal"
    		android:paddingBottom="@dimen/activity_vertical_margin"
    		android:paddingLeft="@dimen/activity_horizontal_margin"
    		android:paddingRight="@dimen/activity_horizontal_margin"
    		android:paddingTop="@dimen/activity_vertical_margin"
    		android:weightSum="7" >
    		
    		 <EditText
		        android:id="@+id/searchingLocation"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="6"		        	        
		        android:inputType="textPassword"
		        android:hint="@string/searching" >
		        <requestFocus />
		    </EditText>
		
		    <Button
		        android:id="@+id/searchingButton"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"		        
		        android:background="@drawable/search_button"
		        android:text="" />    		
	    </LinearLayout>	    
	</RelativeLayout>
	
    <RelativeLayout
        android:id="@+id/select_location_placeholder"  
        android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="0.5" >	
	</RelativeLayout>
	
    <RelativeLayout
        android:id="@+id/friend_gallery_layout"
        android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="3" >
	    
        <ListView
	        android:id="@android:id/list"
	        android:layout_width="300dp"
	        android:layout_height="wrap_content" 
	        android:layout_centerHorizontal="true" >
		</ListView>
		
        <!--  
        <HorizontalScrollView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	        <LinearLayout
	            android:id="@+id/mygallery"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            />
    	</HorizontalScrollView>
	    -->
	    <!--
	    <Gallery
		    android:id="@+id/gallery"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" />
		-->
    </RelativeLayout>

</LinearLayout>
